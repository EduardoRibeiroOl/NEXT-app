generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Acao {
  id        BigInt     @id @default(autoincrement())
  simbolo   String     @unique
  nome      String
  carteiras Carteira[]
}

model Carteira {
  id           BigInt    @id @default(autoincrement())
  usuarioId    BigInt?
  acaoId       BigInt?
  quantidade   Int
  precoMedio   Float
  atualizadoEm DateTime? @default(now())

  // Relações (se os modelos Usuario e Acao existirem)
  usuario Usuario? @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  acao    Acao?    @relation(fields: [acaoId], references: [id], onDelete: Cascade)
}

model Usuario {
  id           BigInt    @id @default(autoincrement())
  nomeCompleto String    @map("nome_completo")
  cpf          String    @unique
  telefone     String?
  usuario      String    @unique
  email        String    @unique
  senha        String
  criadoEm     DateTime? @default(now()) @map("criado_em")

  // Relacionamento com Carteira
  carteiras Carteira[]
}
